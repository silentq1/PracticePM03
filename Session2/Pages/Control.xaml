<Page x:Class="Session2.Pages.Control"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Control">

    <Grid>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Button  Grid.Row="0" Height="30" Width="250" Content="Контроль состояния" Click="Control_ButtonClick"/>
            <Button  Grid.Row="1" Height="30" Width="250" Content="Настройка оборудования" Click="Equipment_ButtonClick"/>
            <Button  Grid.Row="2" Height="30" Width="250" Content="Расчёт количества базовый станций" Click="BaseStation_ButtonClick"/>
        </Grid>
    </Grid>
</Page>
